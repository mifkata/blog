---
import { getCollection } from "astro:content";
import ArticleCard from "@/components/ArticleCard/ArticleCard.astro";
import PageLayout from "@/layouts/PageLayout.astro";
import { SITE_TITLE } from "@/consts";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  const years = [
    ...new Set(posts.map((post) => post.data.pubDate.getFullYear())),
  ];

  return years.map((year) => ({
    params: { year: String(year) },
    props: {
      posts: posts
        .filter((post) => post.data.pubDate.getFullYear() === year)
        .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()),
    },
  }));
}

const { year } = Astro.params;
const { posts } = Astro.props;
---

<PageLayout
  title={`${year} | ${SITE_TITLE}`}
  description={`Posts from ${year}`}
  size="default"
>
  <section>
    <h1>Posts from {year}</h1>
    <div class="space-y-8 mt-8">
      {posts.map((post) => <ArticleCard post={post} />)}
    </div>
  </section>
</PageLayout>
