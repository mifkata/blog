---
import PageLayout from "@/layouts/PageLayout.astro";
import PageHeader from "@/components/pages/common/PageHeader/PageHeader.astro";
import SectionHeader from "@/components/pages/common/SectionHeader/SectionHeader.astro";
import ContactCTA from "@/components/pages/common/ContactCTA/ContactCTA.astro";
import ServicesGrid from "@/components/pages/services/ServicesGrid/ServicesGrid.astro";
import ReasonsGrid from "@/components/pages/services/ReasonsGrid/ReasonsGrid.astro";
import ClientList from "@/components/pages/services/ClientList/ClientList.astro";
import Shield from "@/components/ui/icons/Shield.astro";
import Star from "@/components/ui/icons/Star.astro";
import Tool from "@/components/ui/icons/Tool.astro";
import { SITE_TITLE } from "@/consts";

const services = [
  {
    title: "Backend & API Engineering",
    description:
      "High-performance Node.js/TypeScript services, microservice architectures, BFF layers, and schema-driven APIs with a focus on reliability and testing.",
    icon: "server",
  },
  {
    title: "Frontend Development",
    description:
      "Expert React/Next.js development, micro-frontends, complex SPAs, SSR, SEO-optimized pages, and enterprise component libraries.",
    icon: "layout",
  },
  {
    title: "System Architecture & Transformation",
    description:
      "Turning monoliths into microservices, defining architecture standards, rebuilding legacy systems, and setting technical foundations for scale.",
    icon: "git-branch",
  },
  {
    title: "DevOps & Infrastructure",
    description:
      "Cloud-native architectures on AWS/GCP, Kubernetes orchestration, Terraform-driven infrastructure, and CI/CD pipeline optimization.",
    icon: "cloud",
  },
  {
    title: "Technical Leadership",
    description:
      "Interim principal engineer roles, coaching teams, establishing testing culture, improving delivery workflows, and unblocking systems.",
    icon: "users",
  },
];

const reasons = [
  {
    title: "Immediate Impact",
    description:
      "I don't need onboarding — I need problems. Track record of joining complex systems at FT, DAZN, Checkatrade, and producing results fast.",
  },
  {
    title: "Full-Stack Coverage",
    description:
      "Backend, frontend, DevOps, architecture, testing, pipelines — all covered. Fewer contractors, fewer handoffs, faster delivery, better consistency.",
  },
  {
    title: "Production-Ready Systems",
    description:
      "From ETL pipelines and serverless architectures to enterprise platforms. I build systems that ship and scale.",
  },
  {
    title: "Engineering Excellence",
    description:
      "Top-down integration test culture, clean service patterns, reusable boilerplates, and documentation practices. Teams become more productive.",
  },
  {
    title: "Business Problem Solver",
    description:
      "I've rebuilt architectures, migrated products, increased SEO traffic, improved acquisition funnels, and rescued failing infrastructure. I understand the why, not just the what.",
  },
  {
    title: "25+ Years of Perspective",
    description:
      "Developer, architect, DevOps, designer, QA, tech lead — I've seen every flavour of success and disaster. That experience is baked in from the start.",
  },
];

const clients = [
  "Financial Times",
  "DAZN",
  "Checkatrade",
  "Toptal",
  "McKinsey & Company",
];
---

<PageLayout
  title={`Services | ${SITE_TITLE}`}
  description="Full-stack software engineering consulting: backend, frontend, DevOps, architecture, and technical leadership"
  size="wide"
>
  <PageHeader
    title="Services"
    subtitle="I design, build, and scale modern digital products — end to end."
    description="With 25+ years of professional experience, I work as a full-stack software engineering consultant through my company, Tricky Click. I specialise in coming into messy environments, finding clarity fast, and delivering results without drama."
  />

  <section class="mb-16">
    <SectionHeader title="What I Do" class="pb-8">
      <Tool size={28} class="text-[#6FA4AF]" slot="icon" />
    </SectionHeader>
    <ServicesGrid services={services} />
  </section>

  <section class="mb-16">
    <SectionHeader title="Why Work With Me" class="pb-12">
      <Star size={28} class="text-[#B8C4A9]" slot="icon" />
    </SectionHeader>
    <ReasonsGrid reasons={reasons} />
  </section>

  <section class="mb-16">
    <SectionHeader title="Trusted By" class="mb-6">
      <Shield size={28} class="text-accent" slot="icon" />
    </SectionHeader>
    <p class="text-gray-dark mb-6">
      I've consistently been hired by companies that expect senior, independent,
      high-calibre work:
    </p>
    <ClientList clients={clients} />
  </section>

  <ContactCTA
    headline="Ready to discuss your project?"
    description="I'm available for contract engagements and consulting work."
  />
</PageLayout>
