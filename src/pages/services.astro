---
import BaseHead from "../components/BaseHead.astro";
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";

const services = [
  {
    title: "Backend & API Engineering",
    description:
      "High-performance Node.js/TypeScript services, microservice architectures, BFF layers, and schema-driven APIs with a focus on reliability and testing.",
    icon: "server",
  },
  {
    title: "Frontend Development",
    description:
      "Expert React/Next.js development, micro-frontends, complex SPAs, SSR, SEO-optimized pages, and enterprise component libraries.",
    icon: "layout",
  },
  {
    title: "System Architecture & Transformation",
    description:
      "Turning monoliths into microservices, defining architecture standards, rebuilding legacy systems, and setting technical foundations for scale.",
    icon: "git-branch",
  },
  {
    title: "DevOps & Infrastructure",
    description:
      "Cloud-native architectures on AWS/GCP, Kubernetes orchestration, Terraform-driven infrastructure, and CI/CD pipeline optimization.",
    icon: "cloud",
  },
  {
    title: "Technical Leadership",
    description:
      "Interim principal engineer roles, coaching teams, establishing testing culture, improving delivery workflows, and unblocking systems.",
    icon: "users",
  },
];

const reasons = [
  {
    title: "Immediate Impact",
    description:
      "I don't need onboarding — I need problems. Track record of joining complex systems at FT, DAZN, Checkatrade, and producing results fast.",
  },
  {
    title: "Full-Stack Coverage",
    description:
      "Backend, frontend, DevOps, architecture, testing, pipelines — all covered. Fewer contractors, fewer handoffs, faster delivery, better consistency.",
  },
  {
    title: "Production-Ready Systems",
    description:
      "From ETL pipelines and serverless architectures to enterprise platforms. I build systems that ship and scale.",
  },
  {
    title: "Engineering Excellence",
    description:
      "Top-down integration test culture, clean service patterns, reusable boilerplates, and documentation practices. Teams become more productive.",
  },
  {
    title: "Business Problem Solver",
    description:
      "I've rebuilt architectures, migrated products, increased SEO traffic, improved acquisition funnels, and rescued failing infrastructure. I understand the why, not just the what.",
  },
  {
    title: "25+ Years of Perspective",
    description:
      "Developer, architect, DevOps, designer, QA, tech lead — I've seen every flavour of success and disaster. That experience is baked in from the start.",
  },
];

const clients = [
  "Financial Times",
  "DAZN",
  "Checkatrade",
  "Toptal",
  "McKinsey & Company",
];
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={`Services | ${SITE_TITLE}`}
      description="Full-stack software engineering consulting: backend, frontend, DevOps, architecture, and technical leadership"
    />
  </head>
  <body>
    <div class="content-wrapper">
      <Header />
      <main class="max-w-[960px] mx-auto px-6 py-12">
        <!-- Hero Section -->
        <section class="mb-8">
          <h1 class="text-4xl md:text-5xl mb-6">Services</h1>
          <p class="text-xl text-gray max-w-[700px] mb-4">
            I design, build, and scale modern digital products — end to end.
          </p>
          <p class="text-gray-dark max-w-[700px]">
            With 25+ years of professional experience, I work as a full-stack
            software engineering consultant through my company, <strong
              class="text-black">Tricky Click</strong
            >. I specialise in coming into messy environments, finding clarity
            fast, and delivering results without drama.
          </p>
        </section>

        <!-- Services -->
        <section class="mb-16">
          <h2 class="text-2xl pb-8 flex items-center gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-[#6FA4AF]"
            >
              <path
                d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"
              ></path>
            </svg>
            What I Do
          </h2>
          <div class="grid md:grid-cols-2 gap-6">
            {
              services.map((service) => (
                <div class="p-6 border border-gray-light rounded-xl hover:border-accent transition-colors">
                  <div class="flex items-start gap-4">
                    <div class="w-10 h-10 bg-accent/10 rounded-lg flex items-center justify-center flex-shrink-0">
                      {service.icon === "server" && (
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          class="text-accent"
                        >
                          <rect
                            x="2"
                            y="2"
                            width="20"
                            height="8"
                            rx="2"
                            ry="2"
                          />
                          <rect
                            x="2"
                            y="14"
                            width="20"
                            height="8"
                            rx="2"
                            ry="2"
                          />
                          <line x1="6" y1="6" x2="6.01" y2="6" />
                          <line x1="6" y1="18" x2="6.01" y2="18" />
                        </svg>
                      )}
                      {service.icon === "layout" && (
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          class="text-accent"
                        >
                          <rect x="3" y="3" width="18" height="18" rx="2" />
                          <line x1="3" y1="9" x2="21" y2="9" />
                          <line x1="9" y1="21" x2="9" y2="9" />
                        </svg>
                      )}
                      {service.icon === "git-branch" && (
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          class="text-accent"
                        >
                          <line x1="6" y1="3" x2="6" y2="15" />
                          <circle cx="18" cy="6" r="3" />
                          <circle cx="6" cy="18" r="3" />
                          <path d="M18 9a9 9 0 0 1-9 9" />
                        </svg>
                      )}
                      {service.icon === "cloud" && (
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          class="text-accent"
                        >
                          <path d="M18 10h-1.26A8 8 0 1 0 9 20h9a5 5 0 0 0 0-10z" />
                        </svg>
                      )}
                      {service.icon === "users" && (
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="20"
                          height="20"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          class="text-accent"
                        >
                          <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
                          <circle cx="9" cy="7" r="4" />
                          <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
                          <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                        </svg>
                      )}
                    </div>
                    <div>
                      <h3 class="text-lg m-0 mb-2 !text-[#6FA4AF]">
                        {service.title}
                      </h3>
                      <p class="text-gray-dark text-sm m-0">
                        {service.description}
                      </p>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
        </section>

        <!-- Why Hire Me -->
        <section class="mb-16">
          <h2 class="text-2xl pb-12 flex items-center gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-[#B8C4A9]"
            >
              <polygon
                points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"
              ></polygon>
            </svg>
            Why Work With Me
          </h2>
          <div class="grid md:grid-cols-2 gap-8">
            {
              reasons.map((reason) => (
                <div>
                  <h3 class="text-lg m-0 mb-2 !text-[#B8C4A9] underline decoration-2 underline-offset-4 decoration-[#B8C4A9]/30">
                    {reason.title}
                  </h3>
                  <p class="text-gray-dark m-0">{reason.description}</p>
                </div>
              ))
            }
          </div>
        </section>

        <!-- Trusted By -->
        <section class="mb-16">
          <h2 class="text-2xl mb-6 flex items-center gap-3">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="28"
              height="28"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="text-accent"
            >
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
            </svg>
            Trusted By
          </h2>
          <p class="text-gray-dark mb-6">
            I've consistently been hired by companies that expect senior,
            independent, high-calibre work:
          </p>
          <div class="flex flex-wrap gap-4">
            {
              clients.map((client) => (
                <span class="px-4 py-2 bg-gray-light rounded-lg text-gray-dark">
                  {client}
                </span>
              ))
            }
          </div>
        </section>

        <!-- CTA -->
        <section class="text-center py-12 border-t border-gray-light">
          <p class="text-xl text-gray mb-2">Ready to discuss your project?</p>
          <p class="text-gray-dark mb-6">
            I'm available for contract engagements and consulting work.
          </p>
          <Button
            href="mailto:hi@mifkata.com"
            class="px-6 py-3"
            variant="inverse"
          >
            Get in Touch
          </Button>
        </section>
      </main>
      <Footer />
    </div>
  </body>
</html>
