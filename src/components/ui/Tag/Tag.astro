---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  tag: string;
}

const { tag, class: className, ...props } = Astro.props;
---

<a
  href={`/tags/${tag}/`}
  class:list={[
    "py-1 px-2 bg-gray-light rounded text-gray-dark text-sm no-underline hover:bg-accent hover:text-white!",
    className,
  ]}
  {...props}
>
  {tag}
</a>
