---
interface Props {
  size?: "sm" | "md";
  class?: string;
}

const { size = "sm", class: className } = Astro.props;

const sizeClasses = {
  sm: "px-2 py-1 text-sm",
  md: "px-4 py-2 text-base",
};
---

<span
  class:list={[
    "bg-gray-light rounded text-gray-dark inline-block",
    sizeClasses[size],
    className,
  ]}
>
  <slot />
</span>
