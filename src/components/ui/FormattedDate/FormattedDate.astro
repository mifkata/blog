---
interface Props {
  date: Date | string | number;
}

const { date: dateProp } = Astro.props;
const date = dateProp instanceof Date ? dateProp : new Date(dateProp);
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
