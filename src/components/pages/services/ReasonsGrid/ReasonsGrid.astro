---
interface Reason {
  title: string;
  description: string;
}

interface Props {
  reasons: Reason[];
}

const { reasons } = Astro.props;
---

<div class="grid md:grid-cols-2 gap-8">
  {
    reasons.map((reason) => (
      <div>
        <h3 class="text-lg m-0 mb-2 !text-[#B8C4A9] underline decoration-2 underline-offset-4 decoration-[#B8C4A9]/30">
          {reason.title}
        </h3>
        <p class="text-gray-dark m-0">{reason.description}</p>
      </div>
    ))
  }
</div>
