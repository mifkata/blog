---
interface Props {
  command?: string;
  output?: string;
}

const {
  command = "cat current_focus.txt",
  output = "Exploring vibe coding with AI, mastering Elixir and designing distributed systems.",
} = Astro.props;
---

<section class="max-w-[960px] mx-auto pb-12 mt-8">
  <div class="bg-gray-dark text-gray-light p-4 rounded-lg font-mono text-sm">
    <span class="text-accent">$</span>
    <span class="text-white ml-2">{command}</span>
    <div class="mt-2 text-gray-light opacity-80">
      {">"}
      {output}
    </div>
  </div>
</section>
