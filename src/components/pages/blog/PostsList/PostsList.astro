---
import type { CollectionEntry } from "astro:content";
import ArticleCard from "@/components/post/ArticleCard/ArticleCard.astro";

interface Props {
  posts: CollectionEntry<"blog">[];
  title?: string;
  showHeader?: boolean;
}

const { posts, title = "All Posts", showHeader = true } = Astro.props;
---

<section>
  {
    showHeader && (
      <div class="flex items-center gap-3 mb-8">
        <h3 class="text-lg m-0 text-gray uppercase tracking-wider">{title}</h3>
        <div class="flex-1 h-px bg-gray-light" />
      </div>
    )
  }
  <div class="space-y-8">
    {posts.map((post) => <ArticleCard post={post} />)}
  </div>
</section>
