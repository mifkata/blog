---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  number?: string;
}

const { href, number, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, "");
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === "/" + (subpath?.[0] || "");
---

<a
  href={href}
  class:list={[
    "inline-flex items-center gap-1 no-underline text-gray-dark hover:text-accent transition-colors",
    { "text-accent font-medium": isActive },
    className,
  ]}
  {...props}
>
  {number && <span class="text-sm text-gray">{number}.</span>}
  <slot />
</a>
