---
interface Props {
  href?: string;
  variant?: "normal" | "inverse" | "ghost";
  class?: string;
}

const { href, variant = "normal", class: className } = Astro.props;

const baseStyles =
  "inline-flex items-center gap-2 px-4 py-2 rounded no-underline transition-all duration-200 ease-out hover:-translate-y-0.5 hover:shadow-md";
const variantStyles = {
  normal:
    "bg-gradient-to-br from-button-light to-[#e8d4bc] !text-button border border-button hover:from-[#f0e2cc] hover:to-[#dcc6a8]",
  inverse:
    "bg-gradient-to-br from-[#e8935f] to-[#b85a38] !text-button-light hover:from-[#db8652] hover:to-[#a84f30]",
  ghost:
    "bg-transparent !text-button border border-button hover:bg-button-light/50",
};

const classes = [baseStyles, variantStyles[variant], className];
const Element = href ? "a" : "button";
---

<Element href={href} class:list={classes}>
  <slot />
</Element>
