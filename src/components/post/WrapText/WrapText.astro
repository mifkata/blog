---
interface Props {
  media?: "all" | "sm" | "md" | "lg" | "xl";
}

const { media = "all" } = Astro.props;
---

<div class="wrap-text" data-media={media}><slot /></div>

<style>
  .wrap-text[data-media="all"] :global(pre) {
    @apply text-wrap;
  }

  @media (min-width: 640px) {
    .wrap-text[data-media="sm"] :global(pre) {
      @apply text-wrap;
    }
  }

  @media (min-width: 768px) {
    .wrap-text[data-media="md"] :global(pre) {
      @apply text-wrap;
    }
  }

  @media (min-width: 1024px) {
    .wrap-text[data-media="lg"] :global(pre) {
      @apply text-wrap;
    }
  }

  @media (min-width: 1280px) {
    .wrap-text[data-media="xl"] :global(pre) {
      @apply text-wrap;
    }
  }
</style>
